script/source = "@tool
extends Control

@export var variant := Enums.CharacterSelection.WHITE:
	set(val):
		variant = val
		
		for child: Control in get_children():
			child.visible = false
		
		match variant:
			Enums.CharacterSelection.WHITE:
				$White.visible = true
			Enums.CharacterSelection.RED:
				$Red.visible = true
			Enums.CharacterSelection.BLUE:
				$Blue.visible = true
"

